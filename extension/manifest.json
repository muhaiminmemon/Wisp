{
    "manifest_version": 3,
    "name": "Productivity Buddy Extension",
    "version": "1.0",
    "description": "Syncs login state with Productivity Buddy web app",
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://otuzfokbkjwprdcqomjv.supabase.co/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
  }